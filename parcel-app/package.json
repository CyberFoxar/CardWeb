{
  "name": "cardweb",
  "description": "A website to serve card, loosely based on Devdocs.io's concept of SSO and offline-capable app",
  "version": "0.0.1",
  "author": {
    "name": "CyberFoxar"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.3.1",
    "@tailwindcss/typography": "^0.5.1",
    "@types/yaml-front-matter": "^4.1.0",
    "@types/node": "^17.0.20",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15",
    "parcel": "^2.3.1",
    "postcss": "^8.4.6",
    "process": "^0.11.10",
    "tailwindcss": "^3.0.22",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@types/marked": "^4.0.2",
    "marked": "^4.0.12",
    "yaml-front-matter": "^4.1.1"
  },
  "app": "dist/index.html",
  "targets": {
    "main": {
      "publicUrl": "/"
    }
  },
  "scripts": {
    "start-parcel": "yarn parcel \".\\src\\index.html\" --no-cache",
    "start-mdprocess": "nodemon ./data-md/build-data.js --watch ./data-md",
    "start-tscmd": "tsc-watch --target es2021 --module commonjs ./data-md/build-data.ts --outDir ./data-md/ --onSuccess \"node ./data-md/build-data.js\"",
    "start": "concurrently \"npm:start-parcel\" \"npm:start-tscmd\" -c magenta,cyan",
    "build": "parcel build \".\\src\\index.html\" --no-cache --dist-dir \".\\dist-prod\"",
    "build-indexes": "tsc --target es2021 --module commonjs ./data-md/build-data.ts --outDir ./data-md/ --noEmit && node ./data-md/build-data.js",
    "copy-files": "cp -r data-md/fr/ dist-prod/ && cp data-md/fr-index.json dist-prod/indexes/fr-index.json"
  }
}

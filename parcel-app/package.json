{
  "name": "cardweb",
  "description": "A website to serve card rules, loosely based on Devdocs.io's concept of SPA and offline-capable app",
  "version": "0.0.1",
  "author": {
    "name": "CyberFoxar",
    "email": "cyberfoxar@free.fr"
  },
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://git.xorus.dev/CyberFoxar/CardWeb"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.5.0",
    "@tailwindcss/typography": "^0.5.2",
    "@types/marked": "^4.0.3",
    "@types/node": "^17.0.27",
    "@types/yaml-front-matter": "^4.1.0",
    "autoprefixer": "^10.4.5",
    "concurrently": "^7.1.0",
    "nodemon": "^2.0.15",
    "parcel": "^2.5.0",
    "postcss": "^8.4.12",
    "process": "^0.11.10",
    "tailwindcss": "^3.0.24",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.6.3",
    "yarn-upgrade-all": "^0.7.1"
  },
  "dependencies": {
    "lit": "^2.2.2",
    "lit-element-router": "^2.0.3",
    "marked": "^4.0.14",
    "yaml-front-matter": "^4.1.1"
  },
  "app": "dist/index.html",
  "targets": {
    "main": false,
    "default": {
      "distDir": "dist-prod",
      "engines": {
        "browsers": ">= 5%, last 2 versions, not dead"
      },
      "context": "browser"
    }
  },
  "scripts": {
    "start-parcel": "yarn parcel src/index.html",
    "start-mdprocess": "nodemon data-md/build-data.js --watch data-md",
    "start-tscmd": "tsc-watch --target es2021 --module commonjs ./data-md/build-data.ts --outDir ./data-md/ --onSuccess \"node ./data-md/build-data.js\"",
    "start": "concurrently \"npm:start-parcel\" \"npm:start-tscmd\" -c magenta,cyan",
    "build": "parcel build src/index.html --no-cache --dist-dir dist-prod/",
    "build-indexes": "tsc data-md/build-data.ts --target es2021 --module commonjs --outDir data-md/ && node data-md/build-data.js",
    "copy-files": "cp -r data-md/fr/ dist-prod/ && mkdir dist-prod/indexes/ && cp data-md/fr-index.json dist-prod/indexes/fr-index.json"
  }
}

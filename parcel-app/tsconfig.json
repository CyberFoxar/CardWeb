{
    "include": ["src/**/*"],
    "compilerOptions": {
      "useDefineForClassFields": false,
      "experimentalDecorators": true,
      "module": "esnext",
      "target": "es2021",
      "strict": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "lib": ["ES2021", "DOM", "WebWorker"],
      "paths": {
        "~src/*": [
          "./src/*"
        ],
        "~components/*": [
          "./src/ts/components/*"
        ]
      },
      "esModuleInterop": true,
    }
  }